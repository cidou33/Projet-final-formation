<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="description" content="Page listant des transcriptions musicale de batterie avec accès le lecture seule ou en téléchargement à un PDF ainsi qu'au clip youtube correspondant. Possibilité de rechercher par nom ou niveau de difficulté" />
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/base.css') }}">
    <title>Les transcriptions</title>
</head>
<body class="bodytranscriptions">
    {% include 'commons/header.html.twig' %}
    <main class="{% if is_granted('ROLE_ADMIN') %}adminMainHomePage{% else %}mainHomePage{% endif %} mainTranscriptions">
        {% block body %}
            <section class="sectionSearch">
                <div class="bgTitleTranscriptions">
                    <h1 class="titleTranscriptions">LES TRANSCRIPTIONS</h1>
                </div>
                <form class="searchForm" action="{{ path('bandNameSearch') }}" method="post">
                    <input class="cellForm" type="search" placeholder="tapez un groupe" name="bandNameSearch">
                    <input class="searchButton" type="submit" value="chercher">
                </form>
                <p class="textOrange searchHelp">* pour accéder a toute la liste, valider avec le champ vide *</p>
                <div class="letterSearch">
                    {% for letter in alphabet %}
                        <a class="textWhite" href="{{ path('showTranscriptions', {'infos':letter}) }}">{{ letter }}</a>
                    {% endfor %}
                </div>
                <div class="difficultyLinkContainer">
                    <a class="textWhite difficultyLink" href="{{ path('showTranscriptions', {'infos': 'facile'}) }}">
                        <div class="green difficultyToken"></div>
                        <span>facile</span>
                    </a>
                    <a class="textWhite difficultyLink" href="{{ path('showTranscriptions', {'infos': 'moyen'}) }}">
                        <div class="orange difficultyToken"></div>
                        <span>moyen</span>
                    </a>
                    <a class="textWhite difficultyLink" href="{{ path('showTranscriptions', {'infos': 'difficile'}) }}">
                        <div class="red difficultyToken"></div>
                        <span>difficile</span>
                    </a>
                </div>
            </section>
            <section class="listTranscriptions">
                <div class="menuTranscription">
                    <span class="textWhite">Groupe/Titre</span>
                        <span class="textWhite">Favori</span>
                    <span class="textWhite">Fichier/Vidéo</span>
                </div>
            {% for transcription in transcriptions %}
                {% if transcription.active == true %}
                <article>
                    <div class="transcriptionContainer">
                        <div class="infoTranscription">
                            <span tabindex="5" class="textWhite nameBand">{{ transcription.bandName }}</span>
                            <span tabindex="5" class="textWhite titleSong">{{ transcription.songName }}</span>
                            <div class="difficultyToken {{ transcription.difficultyLevel.color }}"></div>
                        </div>
                        {% if connect == false %}
                            <div class="favoriContainer">
                                {% for fav in favori %}
                                    {% if fav.id == transcription.id %}<img class="logoFavori" src="{{ asset('assets/data/img/media/star.png') }}" alt="Etoile jaune">{% endif %}
                                {% endfor %}

                                <a class="textWhite" href="{{ path('modifyFavori',{'id':transcription.id}) }}">ajouter / supprimer</a>
                            </div>
                        {% endif %}
                        <div class="buttonTranscription">
                            <a tabindex="5" class="textWhite" href="{{ asset('assets/data/pdf/uploadTrainings/' ~ transcription.pdfFile) }}" download="{{ transcription.pdfFile }}">Telecharger</a>
                            <a tabindex="5" class="textWhite" href="{{ path('showTranscriptionAndVideo', {'id':transcription.id}) }}">
                                <img tabindex="5" class="logoYoutube" src="{{ asset('assets/data/img/media/logo_youtube.png') }}" alt="logo youtube en couleur">
                                <span tabindex="5" >Voir</span>
                            </a>
                        </div>
                    </div>
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="adminLinkTranscription">
                            <a class="textBlack green" href="{{ path('modifyStatusTranscription', {'id':transcription.id}) }}">Désactiver</a>
                            <a class="textBlack orange" href="{{ path('updateTranscription', {'id':transcription.id}) }}">Modifier</a>
                            <a class="textBlack red" href="{{ path('deleteTranscription', {'id':transcription.id}) }}">Supprimer</a>
                        </div>
                    {% endif %}
                </article>
                {% endif %}
            {% endfor %}
                {{ knp_pagination_render(transcriptions) }}
                {% if is_granted('ROLE_ADMIN') %}
                    <h2>Transcriptions inactives</h2>
                    {% for transcription in transcriptions %}
                    {% if transcription.active == false %}
                        <article>
                            <div class="transcriptionContainer">
                                <div class="infoTranscription">
                                    <span class="textWhite nameBand">{{ transcription.bandName }}</span>
                                    <span class="textWhite titleSong">{{ transcription.songName }}</span>
                                </div>
                                <div class="difficultyToken {{ transcription.difficultyLevel.color }}"></div>
                                {% if connect == false %}
                                    <div class="favoriContainer">
                                        {% for fav in favori %}
                                            {% if fav.id == transcription.id %}<img class="logoFavori" src="{{ asset('assets/data/img/media/star.png') }}" alt="Etoile jaune">{% endif %}
                                        {% endfor %}
                                        <a class="textWhite" href="{{ path('modifyFavori',{'id':transcription.id}) }}">ajouter / supprimer</a>
                                    </div>
                                {% endif %}
                                <div class="buttonTranscription">
                                    <a class="textWhite" href="{{ asset('assets/data/pdf/uploadTrainings/' ~ transcription.pdfFile) }}" download="{{ transcription.pdfFile }}">Telecharger</a>
                                    <a class="textWhite" href="{{ path('showTranscriptionAndVideo', {'id':transcription.id}) }}">
                                        <img class="logoYoutube" src="{{ asset('assets/data/img/media/logo_youtube.png') }}" alt="logo youtube en couleur">
                                        <span>Voir</span>
                                    </a>
                                </div>
                            </div>
                            {% if is_granted('ROLE_ADMIN') %}
                                <div class="adminLinkTranscription">
                                    <a class="textBlack green" href="{{ path('modifyStatusTranscription', {'id':transcription.id}) }}">Activer</a>
                                    <a class="textBlack orange" href="{{ path('updateTranscription', {'id':transcription.id}) }}">Modifier</a>
                                    <a class="textBlack red" href="{{ path('deleteTranscription', {'id':transcription.id}) }}">Supprimer</a>
                                </div>
                            {% endif %}
                        </article>
                    {% endif %}
                    {% endfor %}
                {% endif %}
            </section>
        {% endblock %}
    </main>
    {% include 'commons/footer.html.twig' %}
    {% if is_granted('ROLE_ADMIN') %}
    <script async src="{{ asset('assets/js/scriptAdmin.js') }}"></script>
    {% endif %}
    <script async src="{{ asset('assets/js/scriptUser.js') }}"></script>
</body>
</html>