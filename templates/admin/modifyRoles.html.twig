<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    <title>supprimer ou modifier un utilisateur</title>
</head>
<body>
<main>
    {% include 'commons/header.html.twig' %}
    <table>
        <th>supprimer ou modifier un utilisateur</th>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>
                    <form action="{{ path('adminModifyRoleUser') }}" method="post">
                        <input type="text" value="{{ user.id }}" hidden name="userId">
                        <input type="submit" value="{% if user.roles == ['ROLE_ADMIN'] %}Passer utilistateur{% else %}Passer admin{% endif %}">
                    </form>
                </td>
                <td>
                    <form action="{{ path('adminDeleteUser') }}" method="post">
                        <input type="text" value="{{ user.id }}" hidden name="userId">
                        <input type="submit" value="supprimer">
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</main>
</body>
</html>