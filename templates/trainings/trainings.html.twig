<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="description" content="Page listant différents cours sous format PDF en lecture simple ou téléchargeable avec comme thèmes solfège, ryhtme et plein d'utres choses" />
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/base.css') }}">
    <title>Les Cours</title>
</head>
<body>
    {% include 'commons/header.html.twig' %}
    <main class="mainTrainings {% if is_granted('ROLE_ADMIN') %}adminMainHomePage{% else %}mainHomePage{% endif %}">
        {% block body %}
            <div class="bgTitleTrainings">
                <h1 class="titleTrainings textWhite">LES COURS</h1>
            </div>
        <section class="sectionTrainings">
            <div class="secondaryTitleContainer">
                <h2 class="secondaryTitle textBlack">Liste des cours</h2>
                <p class="textWhite descTraining">Içi vous trouverez des exercices de bases pour vous entrainer, vous exercer, ou pour réviser les pratiques incontournables pour être un bon batteur.</p>
            </div>
            {% for training in trainings %}
                {%  if training.active == true %}
                    <article>
                        <div class="userTrainingLink">
                            <div class="trainingTitle">
                                <div class="imgTrainingContainer">
                                    <img src="{{ asset('assets/data/img/uploadCategories/' ~ training.category.img_category) }}" alt="logo de catégorie">
                                </div>
                                <h3 class="textBlack">• {{ training.title }}</h3>
                            </div>
                            <a class="textWhite buttonDL" href="{{ asset('assets/data/pdf/uploadTrainings/' ~ training.pdfFile) }}" download="{{ training.pdfFile }}">Télécharger</a>
                            <a class="textWhite buttonDL" href="{{ asset('assets/data/pdf/uploadTrainings/' ~ training.pdfFile) }}">Lire</a>
                        </div>
                        <button class="buttonTraining">DETAILS</button>
                        <p class="textTraining statut-hide">{{ training.Content }}</p>
                        <p class="changeHide">{{ training.Content }}</p>
                        <button class="buttonTrainingClose statut-hide">FERMER</button>
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="adminLinkTraining">
                            <a class="textWhite green" href="{{ path('modifyStatusTraining', {'id':training.id}) }}">Désactiver</a>
                            <a class="textWhite orange" href="{{ path('updateTraining', {'id':training.id}) }}">Modifier</a>
                            <a class="textWhite red" href="{{ path('deleteTraining', {'id':training.id}) }}">Supprimer</a>
                        </div>
                    {% endif%}
                        <div class="separationLine"></div>
                    </article>
                {% endif %}
            {% endfor %}
            {% if is_granted('ROLE_ADMIN') %}
                <h2 class="textBlack">Cours inactifs</h2>
            {% for training in trainings %}
                {%  if training.active == false %}
                    <article>
                        <div class="userTrainingLink">
                            <div class="trainingTitle">
                                <div class="imgTrainingContainer">
                                    <img src="{{ asset('assets/data/img/uploadCategories/' ~ training.category.img_category) }}" alt="logo de catégorie">
                                </div>
                                <h3 class="textBlack">• {{ training.title }}</h3>
                            </div>
                            <a class="textWhite buttonDL" href="{{ asset('assets/data/pdf/uploadTrainings/' ~ training.pdfFile) }}">Lire</a>
                            <a class="textWhite buttonDL" href="{{ asset('assets/data/pdf/uploadTrainings/' ~ training.pdfFile) }}" download="{{ training.pdfFile }}">Télécharger</a>
                        </div>
                        <button class="buttonTraining">DETAILS</button>
                        <p class="textTraining statut-hide">{{ training.Content }}</p>
                        <p class="changeHide">{{ training.Content }}</p>
                        <button class="buttonTrainingClose statut-hide">FERMER</button>
                        {% if is_granted('ROLE_ADMIN') %}
                            <div class="adminLinkTraining">
                                <a class="textWhite green" href="{{ path('modifyStatusTraining', {'id':training.id}) }}">Activer</a>
                                <a class="textWhite orange" href="{{ path('updateTraining', {'id':training.id}) }}">Modifier</a>
                                <a class="textWhite red" href="{{ path('deleteTraining', {'id':training.id}) }}">Supprimer</a>
                            </div>
                        {% endif%}
                        <div class="separationLine"></div>
                    </article>
                {% endif %}
            {% endfor %}
            {% endif %}
        </section>
        {% endblock %}
    </main>
    {% include 'commons/footer.html.twig' %}
{% if is_granted('ROLE_ADMIN') %}
<script async src="{{ asset('assets/js/scriptAdmin.js') }}"></script>
{% endif %}
<script async src="{{ asset('assets/js/scriptUser.js') }}"></script>
</body>
</html>