<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    <title>Les transcriptions</title>
</head>
<body>
{% include 'commons/header.html.twig' %}
<main>
    {% block body %}
        {% for transcription in transcriptions %}
            <article>
                <span>{{ transcription.bandName }}</span>
                <span>{{ transcription.songName }}</span>
                <div class="{{ transcription.difficultyLevel.color }}"></div>
                {% if connect == false %}
                    <a href="{{ path('modifyFavori',{'id':transcription.id}) }}">Ajouter</a>
                {% endif %}
                <a href="{{ asset('assets/data/pdf/uploadTrainings/' ~ transcription.pdfFile) }}" target="_blank">telecharger</a>
                <a href="{{ path('toto', {'id':transcription.id}) }}">les deux</a>
            </article>
        {% endfor %}

    {% endblock %}
</main>
</body>
</html>